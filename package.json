{
  "name": "skillsync",
  "version": "1.0.0",
  "description": "SkillSync - The Portfolio Revolution Platform",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "client": "npm run dev --workspace=client",
    "server": "npm run dev --workspace=server",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install:all": "npm install && npm install --workspace=client && npm install --workspace=server"
  },
  "keywords": ["skillsync", "portfolio", "collaboration"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
