rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    
    // Helper function to validate user data
    function isValidUserData() {
      return request.resource.data.keys().hasAll(['uid', 'email', 'name', 'role']) &&
        request.resource.data.name is string &&
        request.resource.data.name.size() >= 2 &&
        request.resource.data.name.size() <= 50 &&
        request.resource.data.email is string &&
        request.resource.data.email.matches('.*@.*\\..*') &&
        request.resource.data.role in ['Developer', 'Designer', 'Product Manager', 'Marketing', 'Data Scientist', 'Business Analyst', 'Admin', 'Other'];
    }
    
    // Helper function to validate project data
    function isValidProjectData() {
      return request.resource.data.keys().hasAll(['name', 'description', 'creatorId']) &&
        request.resource.data.name is string &&
        request.resource.data.name.size() >= 3 &&
        request.resource.data.name.size() <= 100 &&
        request.resource.data.description is string &&
        request.resource.data.description.size() >= 20 &&
        request.resource.data.description.size() <= 1000;
    }
    
    // Users collection - users can read all, but only write their own (with validation)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId && isValidUserData();
      allow update: if isOwner(userId) && isValidUserData();
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // Projects collection - authenticated users can read all, creators can write (with validation)
    match /projects/{projectId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.resource.data.creatorId == request.auth.uid &&
        isValidProjectData();
      allow update: if isAuthenticated() && 
        (resource.data.creatorId == request.auth.uid || 
         request.auth.uid in resource.data.team) &&
        isValidProjectData();
      allow delete: if isAuthenticated() && 
        (resource.data.creatorId == request.auth.uid || isAdmin());
    }
    
    // Tasks collection - team members can read/write project tasks
    match /tasks/{taskId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        (resource.data.createdBy == request.auth.uid || 
         resource.data.assignedTo == request.auth.uid);
    }
    
    // Conversations - participants can read/write
    match /conversations/{conversationId} {
      allow read, write: if isAuthenticated() && 
        request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read, write: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
      }
    }
    
    // Join requests - users can read their own and project owners can read project requests
    match /joinRequests/{requestId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || 
         resource.data.projectOwnerId == request.auth.uid);
    }
    
    // Team invitations - sender and recipient can read/write
    match /teamInvitations/{inviteId} {
      allow read: if isAuthenticated() && 
        (resource.data.senderId == request.auth.uid || 
         resource.data.recipientId == request.auth.uid);
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && 
        (resource.data.senderId == request.auth.uid || 
         resource.data.recipientId == request.auth.uid);
      allow delete: if isAuthenticated() && resource.data.senderId == request.auth.uid;
    }
    
    // Notifications - users can only read/write their own (fixed recipientId check)
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
    }
    
    // Score history - users can read all but only write their own
    match /scoreHistory/{historyId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Peer reviews - users can read reviews about them, and create reviews
    match /peerReviews/{reviewId} {
      allow read: if isAuthenticated() && 
        (resource.data.reviewedUserId == request.auth.uid || 
         resource.data.reviewerId == request.auth.uid);
      allow create: if isAuthenticated();
    }
    
    // Settings - users can only read/write their own
    match /settings/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Milestones - team members can read/write project milestones
    match /milestones/{milestoneId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }
  }
}